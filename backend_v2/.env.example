# Example environment variables for The-ailine backend and workers

# Database
POSTGRES_DB=iline
POSTGRES_USER=iline
POSTGRES_PASSWORD=iline
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Django
DJANGO_SECRET_KEY=change-me
DJANGO_DEBUG=0
ALLOWED_HOSTS=*

# Kafka
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_SMS_TOPIC=sms-messages

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# SMS provider
SMS_LOGIN=
SMS_PASSWORD=

# Telegram notifications for sms_worker (optional)
BOT_ID=
CHAT_ID=

# Telegram Bot service
TELEGRAM_BOT_TOKEN=
TELEGRAM_POLL_INTERVAL=1.0
LOG_LEVEL=INFO
# Comma-separated whitelist of Telegram user IDs and/or usernames (e.g., 123456,@admin)
TELEGRAM_WHITELIST=
# Pagination defaults for /unverified command
CARWASH_BOT_PAGE_SIZE=10
CARWASH_BOT_MAX_PAGE_SIZE=50

# Optional: Pip index mirror settings for slow/blocked networks (used during docker build if passed as build-args)
# Example public mirror (choose one appropriate to your region):
# PIP_INDEX_URL=https://pypi.org/simple
# PIP_EXTRA_INDEX_URL=
